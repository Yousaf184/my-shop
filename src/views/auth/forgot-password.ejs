<%- include('../partials/head.ejs') %>

    <%- include('../partials/navbar.ejs') %>

    <h1 class="page-title">Forgot Password</h1>

    <span class="info-msg success-msg-block" id="success-msg-block">
      An email to reset password has been sent to your email
    </span>

    <form
      action="/forgot-password"
      method="POST"
      id="forgot-password-form"
      class="forgot-password-form">

      <input
        type="email"
        id="user-email-field"
        name="user-email-field"
        value=""
        placeholder="Enter your email"
        required/>
      <span class="error-msg EmailError"></span>

      <%- include('../partials/button.ejs', {
          type: 'submit',
          btnLabel: 'Submit',
          btnId: 'forgot-password-btn'
        })
      %>

      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>

    <script src="/js/auth/forgot-password.js" type="module"></script>

<%- include('../partials/foot.ejs') %>